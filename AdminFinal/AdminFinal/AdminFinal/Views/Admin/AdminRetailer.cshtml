@model IEnumerable<AdminFinal.Models.Retailer>

@{
    ViewData["Title"] = "AdminRetailer";
}

<div class="admin-profile">
<h1>Retailer</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RetailerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailerPhoneNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pincode)
            </th>         
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovedStatus)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailerPhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pincode)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedStatus)
            </td>           
            <td>
                <a asp-action="EditRetailer" asp-route-id="@item.RetailerId">Edit</a> |
                <a asp-action="DeleteRetailer" asp-route-id="@item.RetailerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-primary m-2" asp-action="Index2" asp-controller="Home">Back to home</a>
</div>
</div>