@model ecommerse.Models.ProductDetail



@{
ViewData["Title"] = "Cart";
}



<h1>Cart</h1>



<div class="container-fluid">
    <div class="row">
        <div class="col-md-3" >
            <div class="card">
                <div class="card-body">
                     <img src="~/images/@Html.DisplayFor(model => model.Images)" height="100" width="100"/> <br/>
                </div>
                <div class="card-header">
                     <p> @Html.DisplayFor(model => model.ProductName) </p>
                     <p> price : @Html.DisplayFor(model => model.ProductPrice)</p>
                </div>

            </div>
            </div>
        </div>
    </div>
<div>
<a class="btn btn-primary m-2" asp-action="HomeIndex">Continue Shopping</a>
<a class="btn btn-primary m-2" asp-action="Create" asp-controller="ShippingAddress">Buy Now</a>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}