@model IEnumerable<ecommerse.Models.ProductDetail>;




<div id="carouselExampleIndicators" class="carousel slide mb-3" data-bs-ride="carousel">
    <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
    <div class="carousel-item active">
    <img src="~/images/Adv1.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
    <img src="~/images/Adv2.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item ">
    <img src="~/images/Adv3.png" class="d-block w-100" alt="...">
    </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="wcu-section pt-5 pb-5">
    <div class="container">
    <div class="row">
    <div class="col-12">
    <h1 class="wcu-section-heading">Top Products</h1>
    </div>

    @foreach(var item in Model)
    {
        <div class="mb-3 col-md-4" onclick="window.location.href='DisplayDetails/@item.ProductId'" >
        <div class="text-center">
        <img src="~/images/@item.Images" height="150" width="200" />
        </div>
        <div class="product-display wcu-card">
        <h1 class="wcu-card-title mt-3"> @item.ProductName </h1>
        <p class="wcu-card-description"> price:@item.ProductPrice </p>
        </div>
        </div>
    }​​
</div>
</div>
</div>

